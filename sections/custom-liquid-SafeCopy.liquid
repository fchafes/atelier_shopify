{%- style -%}
  header {
    padding: 1em 2em;
    display: flex;
    align-items: center;
  }

  .custom-nav {
    padding: 0;
  }

  .custom-nav ul {
    display: flex;
    list-style: none;
    gap: 1em;
    padding: 0;
    margin: 0;
    font-size: 0.7em !important;
    height: 13px !important;
  }

  .custom-nav ul li:nth-child(1) {
    width: 40px;
  }

  .custom-nav ul li:nth-child(2) {
    width: 49px;
  }

  .custom-nav ul li:nth-child(3) {
    width: 72px;
  }

  .custom-nav ul li a {
    text-decoration: none;
    padding: 0 !important;
  }

  .custom-nav ul li a:hover {
    font-family: 'Libre-Caslon-Italic', serif !important;
    text-transform: lowercase;
    font-size: 1.4em;
    line-height: 0 !important;
  }

  .logo {
    margin-left: auto;
  }

  .logo img {
    width: 120px !important;
    height: 34px !important;
  }

  @media screen and (max-width: 990px) {
    .custom-nav {
      display: none;
    }
  }
{%- endstyle -%}

<header>
  <nav class="custom-nav">
    <ul>
      <li>
        <a href="https://www.atelier.com.uy/"> INICIO </a>
      </li>
      <li>
        <a href="/"> TIENDA </a>
      </li>
      <li>
        <a href="https://www.atelier.com.uy/contacto"> CONTACTO </a>
      </li>
      <li>
        <a
          href="https://www.instagram.com/ateliercasadepan"
          target="_blank"
        >
          INSTAGRAM
        </a>
      </li>
    </ul>
  </nav>
  <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset logo">
    {%- if settings.logo != blank -%}
      <div class="header__heading-logo-wrapper">
        {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
        {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
        {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
        {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo motion-reduce',
            widths: widths,
            height: logo_height,
            width: settings.logo_width,
            alt: logo_alt,
            sizes: sizes,
            preload: true
        }}
      </div>
    {%- else -%}
      <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
  </a>
</header>

