{%- style -%}
  header {
    padding: 1em 2em;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .menu-hamburger {
    display: none;
  }

  .menu-drawer-container {
    position: fixed !important;
    width: 100%;
    height: 100vh;
    background-color: #faf9f5;
    color: #a33434;
    top: 0;
    left: -100%;
    display: block !important;
    justify-content: center;
    align-items: baseline;
    padding-top: 30%;
    transition: left 0.4s ease-in-out;
  }

  .menu-drawer-container.open {
    left: 0;
    display: flex;
  }

  .close-button {
    position: absolute;
    top: 20px;
    left: 20px;
    background: none;
    border: none;
    font-size: 2em;
    cursor: pointer;
  }

  .menu-items {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .menu-items li {
    margin: 0 0 40px 0 !important;
    padding: 0 !important;
  }

  .menu-items li a {
    text-decoration: none;
    color: black;
    display: block;
    margin: 0;
    font-size: 2.7em;
    padding: 0 !important;
    line-height: 1em;
  }

  .menu-items li:last-child a {
    font-size: 1.5em;
    margin-top: 4em;
  }

  .custom-nav {
    padding: 0;
  }

  .custom-nav ul {
    display: flex;
    list-style: none;
    gap: 1em;
    padding: 0;
    margin: 0;
    font-size: 0.7em !important;
    height: 13px !important;
  }

  .custom-nav ul li:nth-child(1) {
    width: 40px;
  }

  .custom-nav ul li:nth-child(2) {
    width: 49px;
  }

  .custom-nav ul li:nth-child(3) {
    width: 72px;
  }

  .custom-nav ul li a {
    text-decoration: none;
    padding: 0 !important;
  }

  .custom-nav ul li a:hover {
    font-family: 'Libre-Caslon-Italic', serif !important;
    text-transform: lowercase;
    font-size: 1.4em;
    line-height: 0 !important;
  }

  .logo {
    margin-left: auto;
  }

  .logo img {
    width: 120px !important;
    height: 34px !important;
  }

  @media screen and (max-width: 990px) {
    .menu-hamburger {
      display: block; /* Mostrar el icono de hamburguesa */
    }

    .custom-nav {
      display: none; /* Ocultar la navegación estándar */
    }

    .menu-drawer-container {
      width: 100%;
      display: none; /* Inicialmente oculto en dispositivos móviles */
    }
  }
{%- endstyle -%}

