<header>
  <div class="menu-hamburger menu-toggle">
    <svg width="21" height="14" viewBox="0 0 18 12" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 12V10H18V12H0ZM0 7V5H18V7H0ZM0 2V0H18V2H0Z" fill="currentColor"/>
    </svg>
  </div>
  <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
    {%- liquid
      if cart == empty
        render 'icon-cart-empty'
      else
        render 'icon-cart'
      endif
    -%}
    <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
    {%- if cart != empty -%}
      <div class="cart-count-bubble">
        {%- if cart.item_count < 100 -%}
          <span aria-hidden="true">{{ cart.item_count }}</span>
        {%- endif -%}
        <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
      </div>
    {%- endif -%}
  </a>

  <nav class="custom-nav">
    <ul>
      <li>
        <a href="https://www.atelier.com.uy/"> INICIO </a>
      </li>
      <li>
        <a href="/"> TIENDA </a>
      </li>
      <li>
        <a href="https://www.atelier.com.uy/contacto"> CONTACTO </a>
      </li>
      <li>
        <a href="https://www.instagram.com/ateliercasadepan" target="_blank"> INSTAGRAM </a>
      </li>
    </ul>
  </nav>

  <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset logo">
    {%- if settings.logo != blank -%}
      <div class="header__heading-logo-wrapper">
        {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
        {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
        {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
        {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo motion-reduce',
            widths: widths,
            height: logo_height,
            width: settings.logo_width,
            alt: logo_alt,
            sizes: sizes,
            preload: true
        }}
      </div>
    {%- else -%}
      <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
  </a>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var menuToggle = document.querySelector('.menu-toggle');
    var menuDrawer = document.querySelector('.menu-drawer-container');
    var closeButton = document.querySelector('.close-button');

    if (menuToggle && menuDrawer) {
      menuToggle.addEventListener('click', function () {
        menuDrawer.classList.toggle('open');
      });
    }

    if (closeButton && menuDrawer) {
      closeButton.addEventListener('click', function () {
        menuDrawer.classList.toggle('open');
      });
    }
  });
</script>

